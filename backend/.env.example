# Application
PROJECT_NAME=Heka
VERSION=0.1.0
ENVIRONMENT=development
DEBUG=True

# MongoDB
# For local MongoDB: mongodb://localhost:27017
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/heka_db
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=heka_db

# Redis (optional for now)
REDIS_URL=redis://localhost:6379/0

# Security - IMPORTANT: Generate a strong secret key!
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS
ALLOWED_ORIGINS=["http://localhost:3000"]

# OpenAI API Key - REQUIRED for AI features
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Google Gemini (optional, for future testing)
GEMINI_API_KEY=

# Stripe (for payments - Sprint 4)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Email (optional for now)
EMAIL_FROM=noreply@heka.app
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Sentry (optional, for error tracking)
SENTRY_DSN=
